extend ../views/layout

block content
	h1 Feed
	p= email
	form.logout-form(accept-charset="utf-8", action="/logout", method="post")
		button(type="submit") Logout
	
	- events.forEach( function( single ){
		a(href="/e/"+single.title)
			p= single.title + " " + single.location
	- });

	form.create-form(accept-charset="utf-8", action="/create_event", method="post")
		input.title(name="title", type="text", placeholder="Title")
		input.location(name="location", type="text", placeholder="Location")		
		button(type="submit") Create
	
